<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_corners_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="#BDBDBD" />  <!-- Shadow Color -->
            <corners android:radius="52dp" />  <!-- Corner Radius + 2dp -->
        </shape>
    </item>
    <!-- Background Layer -->
    <item android:right="2dp" android:left="2dp"
        android:top="2dp" android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white"/>  <!-- Background Color -->
            <corners android:radius="50dp" />  <!-- Original Corner Radius -->
        </shape>
    </item>
</layer-list>