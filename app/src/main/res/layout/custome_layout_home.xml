<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_hike"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_hike"
            android:layout_width="200dp"
            android:layout_height="154dp"
            android:src="@drawable/mountain"
            android:scaleType="centerCrop"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/txt_name_hike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_hike"
            android:text="Name of Hiking"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/txt_level_hike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_hike"
            android:text="Level"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>




        <TextView
            android:id="@+id/txt_location_hike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_level_hike"
            android:text="Location"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txt_length_hike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_location_hike"
            android:text="4.67 km"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@null"
            card_view:srcCompat="@drawable/ic_save" />

    </RelativeLayout>

<!--    <SeekBar-->
<!--        android:id="@+id/seekBar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content" />-->

</androidx.cardview.widget.CardView>